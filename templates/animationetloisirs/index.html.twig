        </section>
        <section class="example-wrapper col-md-4">
            <div class="container-fluid"> 
                <a href="{{ path('sportsetloisirs') }}"><img class="center-block" src ="{{'/images/site-pagny.jpg' | imagine_filter('small')}}" Alt="Photo Sports et Loisirs" width="200" height="150"/>  
