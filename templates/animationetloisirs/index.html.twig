{% extends 'base.html.twig' %}

{% block title %} {{ title }} {% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; font: 16px/1.5; text-align: center}
</style>
<main>
    <h2>{{ titre }} </h2>
    <hr>
    <div class="row container">
        <section class="example-wrapper col-md-4">
        
            <div> 
                <a href="{{ path('jeunesse') }}"><img class="center-block" src ="{{'/images/animations/ileauxenfants.jpg'| imagine_filter('smallplus')}}" Alt="Photo Ile aux enfants" width="200" height="150"/> 
                <h5> Jeunesse </h5>
                </a>
            </div>
        </section>
        <section class="example-wrapper col-md-4">
            <div class="container-fluid"> 
