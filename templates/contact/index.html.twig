{# templates/contact/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %} {{ title }} {% endblock %}

{% block body %}
<style>
    .example-wrapper { max-width: 500px; margin-top: 0}
    .h3 { margin-top: 0}
</style>

<h2> {{ titre }} </h2>
<hr>
<div class="row justify-content-around">

    <main class="example-wrapper col-12 col-md-7">

        {% if not form.vars.valid %}
        <div class="alert alert-danger">
            Vous avez fait une erreur dans le remplissage du formulaire. 
            <br> Veuillez reprendre s'il vous plait.
        </div>
        {% endif %}

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
            {{ message }}
            </div>
        {% endfor %}
        <h3>Laissez nous un message</h3>
    
        <div id="contactForm" class="mt-4 bg-light">

            {{ form_start(form) }}
            <div class="row">
                <div class="col"> Prénom
                {{ form_errors(form.prenom) }} 
                {{ form_widget(form.prenom) }} </div>
                <div class="col">{{ form_row(form.nom) }}</div>
            </div>
            <div class="row">
                <div class="col">{{ form_row(form.tel) }}</div>
                <div class="col">{{ form_row(form.email) }}</div>
            </div>
            {{ form_rest(form) }}
            <div class="form-group">
                <button class="btn btn-primary"> Envoyer </button>
                <input id="reset" type="reset" value="Effacer tout" class="btn btn-dark">
            </div>

            {{ form_end(form) }}
        </div>    
    </main>
    <section class="optionnel col-10 col-md-5">
        <h3> Mairie </h3>
            
            <p class="mt-4"> <img src="/images/iconeadresse.jpg" height="40">7, rue des Halles <br>     55140 Pagny la Blanche Côte </img> </p>
            <p> <a href="tel:+33329908630"><img src="/images/iconetel.png" height="35" > 03 29 90 86 30 </img> </a></p>
            <p> <img  src="/images/iconefax.jpg" height="40"> Fax: 03 29 90 86 30 </img> </p>
            <p> <a href="mailto:pagnylablanchecote@wanadoo.fr"><img src="/images/iconeadressemail.png" height="35"> pagnylablanchecote@wanadoo.fr </a></p>
            <p> Permanence :
                <ul>
                    <li> Le lundi de 10h30 à 12h30</li>
                    <li> Le jeudi de 10h30 à 12h30 </li>
                </ul>
            </p>
    </section>
</div>
{% endblock %}
