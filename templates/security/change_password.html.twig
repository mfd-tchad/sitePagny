{% extends 'base.html.twig' %}

{% block title %}Changement de mot de passe{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="https://kit.fontawesome.com/c85d7d7f2c.js" crossorigin="anonymous"> </script>
{% endblock %}
{% block body %}
    
    <div class="alert alert-secondary text-center"> Vous voulez changer de mot de passe. Entrez le mot de passe actuel, puis le nouveau
        </div>
    <div class="example-wrapper page-login mt-4">
        {% include 'flashes.html.twig' %}
    
        <section class="mt-4">
            {{ form_start(form, 
                {'attr': {
                'class':'col-lg-12'
                }}
            )}}
            
            {{ form_row (form.oldPassword)}}
                   
            <div class="mt-2">
                {{form_row (form.newPassword)}}
            </div>
            <button type="submit" class="btn btn-primary"> Remplacer </button>
            {{ form_end(form)}}
        </section>
    </div>
    {% endblock %}