{% extends 'base.html.twig' %}

{% block title %}Ajout d'adresse mail{% endblock %}

{% block body %}
    
    <div class="alert alert-secondary text-center"> Veuillez entrer votre adresse mail </div>
    <div class="example-wrapper page-login mt-4">
        {% include 'flashes.html.twig' %}
    
        <section class="mt-4">
            {{ form_start(form, 
                {'attr': {
                'class':'col-lg-12'
                }}
            )}}
            
            {{ form_row (form.email)}}
                   
            <button type="submit" class="btn btn-primary"> Enregistrer </button>
            {{ form_end(form)}}
        </section>
    </div>
{% endblock %}